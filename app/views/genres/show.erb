<h1><%= @genre.name %></h1><br>

<% if @genre.songs %>
    <h3>Songs: 
    <% @genre.songs.each do |song| %>
        <a href="/songs/<%= song.slug %>"><%= song.name %></a></h3>
    <% end %>
<% else %>
    No songs available
<% end %>

<% if @genre.artists %>
    <h3>Artists: 
    <% @genre.artists.each do |artist| %>
        <a href="/artists/<%= artist.slug %>"><%= artist.name %></a></h3>
    <% end %>
<% else %>
    No artist available
<% end %>