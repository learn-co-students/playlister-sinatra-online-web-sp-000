<h1><%= @genre.name %></h1>

<ul>
<h3><%= @genre.name %> Songs: </h3>
    <% @genre.songs.each do |s|%>
    <li><a href="/songs/<%= s.slug %>"><%= s.name %></a></li>
    <% end %>
</ul>

<ul>
<h3>Artists with <%= @genre.name %> songs:</h3>
    <% @genre.artists.each do |a|%>
    <li><a href="/artists/<%= a.slug %>"><%= a.name %></a></li>
    <% end %>
</ul>
