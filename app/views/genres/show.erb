<h1><%=@genre.name%></h1>

<% if @genre.artists%>
  <ol>
    <% @genre.artists.each do |artist| %>
      <li><h3><a href="/artists/<%= artist.slug %>"><%=song.name %></a></h3></li>
    <% end %>
  </ol>
<% else %>
  No Artists
<% end %>

<% if @genre.songs%>
  <ol>
    <% @genre.songs.each do |song| %>
      <li><h3><a href="/songs/<%= song.slug %>"><%=song.name %></a></h3></li>
    <% end %>
  </ol>
<% else %>
  No Songs
<% end %>
