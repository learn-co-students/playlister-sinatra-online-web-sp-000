<h2><%= @genre.name %></h2>

<p>Songs:</p>
<ol>
  <% @genre.songs.each do |song| %>
  <li><a href="/songs/<%= song.slug %>"><%= song.name %></a>
</li>
<% end %>
</ol>

<p>Artists:</p>
<ol>
  <% @genre.artists.each do |artist| %>
  <li><a href="/artists/<%= artist.slug %>"><%= artist.name %></a>
</li>
<% end %>
</ol>