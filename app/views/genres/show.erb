<h1><%= @genre.name %></h1>

<% @genre.artists.sort { |art1, art2| art1.name <=> art2.name }.each do |artist| %>
  <h2><a href="/artists/<%= artist.slug %>"><%= artist.name %></a>: </h2>
  <% songs = artist.songs.sort { |sng1, sng2| sng1.name <=> sng2.name }.each do |song| %>
    <ul>
      <h3><li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li></h3>
    </ul>
  <% end %>
<% end %>