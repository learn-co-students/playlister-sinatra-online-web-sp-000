<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h4>Song: </h4>
<h4><%=@song.name%></h4>

<h4>Artist: </h4>

<a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a>

<h4>Genre:</h4>
<ul>
<%@song.genres.each do |genre|%>
    <li><h4><a href="/genres/<%=genre.slug%>"><%=genre.name%></a></h4></li>
<%end%>
</ul>
