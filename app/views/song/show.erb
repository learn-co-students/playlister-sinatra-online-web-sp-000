<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h1><%=@song.name%></h1>
<h2>Artist</h2>
<a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a><br>
<h2>List of Genres</h2>
<% @song.genres.each do |instance| %>
  <a href="/<%= instance.class.name.downcase.pluralize %>/<%= instance.slug %>"><%= instance.name %></a><br>
<%end%>
