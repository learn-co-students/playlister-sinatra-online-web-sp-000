<h2><%= @artist.name %></h2>

<p>Songs:</p>
<ol>
  <% @artist.songs.each do |song| %>
  <li><a href="/songs/<%= song.slug %>"><%= song.name %></a>
</li>
<% end %>
</ol>

<p>Genres:</p>
<ol>
  <% @artist.genres.each do |genre| %>
  <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
</li>
<% end %>
</ol>