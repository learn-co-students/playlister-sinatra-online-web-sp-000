<!DOCTYPE html>
<html>
  <head>
    <title>All the songs!</title>
  </head>

  <body>
    <% @artist.genres.each do |genre| %>
      <h2><%= genre.name %></h2>
      <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
    <% end %>

    <% @artist.songs.each do |song| %>
      <h2><%= song.name %></h2>
      <a href="/songs/<%= song.slug %>"><%= song.name %></a>
    <% end %>
  </body>
</html>
