<h1><%= @artist.name %></h1><br>

<% if @artist.songs %>
    <h3>Songs: 
    <% @artist.songs.each do |song| %>
        <a href="/songs/<%= song.slug %>"><%= song.name %></a></h3>
    <% end %>
<% else %>
    No songs available
<% end %>

<% if @artist.genres %>
    <h3>Genres: 
    <% @artist.genres.each do |genre| %>
        <a href="/genres/<%= genre.slug %>"><%= genre.name %></a></h3>
    <% end %>
<% else %>
    No genre available
<% end %>