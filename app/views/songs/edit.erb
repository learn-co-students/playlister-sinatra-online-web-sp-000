<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h1>Edit the Song</h1>
<form action="/songs/<%= @song.slug %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Name:</label><input type="text" id="Name" name="song[name]" value="<%= @song.name %>">
<br><br>
<label>Artist's name:</label><input type="text" id="Artist Name" name="song[artist]" value="<%= @song.artist.name %>">
<label>Genre:</label>
<% Genre.all.each do |genre| %>
    <input type="checkbox" name="song[genres][]" id="<%= genre.name %>" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
    <br>
  <% end %>
  <br>
  <input type="submit" value="Save">
  </form>