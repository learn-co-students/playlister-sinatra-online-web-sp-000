
<%# <%binding.pry%> 
<form action="/songs/<%=@song.slug%>" method="post">

    <%# <label for="name">Name:</label> %>
    <h1>Name: <%=@song.name%></h1>

    <label for="genres[]">Existing Genres:</label>
    <% @genres.each do |genre| %>
        <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%>
    <% end %>

    

    <label for="artist_name">Artist Name:</label>
    <br><br>
    Artist Name: <input type="text" name="artist[name]" id="artist_name" placeholder="Artist Name: <%=@song.artist.name%>">

    <input type="hidden" name="_method" value="patch">
    <input type="submit" value="Save">
</form>
