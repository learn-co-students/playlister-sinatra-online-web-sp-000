<form action="/songs/<%= @song.slug %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
	<h2>Edit Song</h2>

	<p>Song: <%= @song.name %></p>
	<p>Artist: <%= @song.artist.name %></p>

	<p>New Song Name: <input type="text" name="name" id="Name"></p>
	<p>New Artist Name: <input type="text" name="artist_name" id="Artist Name"></p>

	<p>New Genres: </p>
	<% @genres.each do |genre| %>
		<input type="checkbox" <%= "checked" if @song.genres.include?(genre) %> name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>"><%= genre.name %> <br>
	<% end %>

	<input type="submit" value="Save">
</form>