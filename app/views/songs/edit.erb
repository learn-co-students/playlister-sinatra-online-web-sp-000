<h1>Update <%= @song.name %></h1>
<form method = "POST" action = "/songs/<%= @song.slug %>">
<input type = "hidden" id = "hidden" name = "_method" value = "patch"
<label>Name:</label>
<br>
<input type = "text" id ="Name" name = "song[name]" value = "<%= @song.name %>"><br>
<label>Artist:</label>
<br>
<input type = "text" id = "Artist Name" name ="artist[name]" value = "<%= @song.artist.name %>" ><br>
<% @genres.each do |genre| %>
    <input type = "checkbox" id = "<%= genre.name %>" name = "song[genre_ids][]" value = <%= genre.id %> <%= 'checked' if @song.genre_ids.include? genre.id %>><%= genre.name %></input>
<% end %>
<input type = "submit" id = "Save" value = "Save">
</form>