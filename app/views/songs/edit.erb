<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <br>

<label>Artist Name:</label>
  <input type="text" name="[artist][name]" id='Artist Name' value="<%=@song.artist.name%>">

  <br>

  <p><label>Choose an existing Genre:</label></p>
  <p>
    <%@genres.each do |genre|%>
      <input type="checkbox" name="[genres][]" value="<%=genre.id%>" id="<%=genre.name%>"<%='checked' if @song.genres.include?(genre)%>><%=genre.name%><br></input>
    <%end%>
  </p>

  <br>
    <input type="submit" value="Save">
  </form>
