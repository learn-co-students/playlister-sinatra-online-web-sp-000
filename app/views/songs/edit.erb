<h3>Update Song:</h3>
<form action="/songs/<%= @song.slug %>" method="POST">
   <input id="hidden" type="hidden" name="_method" value="patch">

   <label for="song_name">Update Song:</label>
   <input id="song_name" type="text" name="song[name]" value="<%= @song.name %>">

   <label for="Artist Name">Update Artist:</label>
   <input id="Artist Name" type="text" name="artist[name]" value="<%= @song.artist.name %>">   

   <h4>Update Genre's:</h4>
   <% Genre.all.each do |genre| %>
   <input type="checkbox" id="<%= genre.name %>" name="genres[]" value="<% genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %>
   <% end %>
   <br>
   <br>
   <input type="submit" value="Save">
</form>