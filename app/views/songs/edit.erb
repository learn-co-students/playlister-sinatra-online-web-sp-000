<form method="post" action="/songs/<%= @song.slug %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="song_name">Song</label>
  <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>" readonly>
  <br>
  <label for="artist_name">Artist Name</label>
  <input type="text" name="song[artist][name]" id="artist_name" value="<%= @song.artist.name %>"><br>
  
  <% Genre.all.each do |genre| %>
  <input type="checkbox" name="[genres][]" value="<%= genre.name %>" id="<%= genre.name %>"><%= genre.name %><br>
  <% end %>
  <input type="submit" value="Save">
</form>
   