<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="song[name]">Name</label>
  <input type="text" name="Name" id="Name" value="<%= @song.name %>"><%= @song.name %><br>

  <label for="song[artist_name]">Artist Name</label>
  <input type="text" name="Artist Name" id="Artist Name" value="<%= @song.artist.name %>"><br>

  <label for="genres[]">Genres:</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.name %>" id="<%= genre.name %>"
    <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %>

  <input type="submit" value="Save">
</form>
