<h1> Edit a Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
    <label for="song_name">Name</label>
    <br>
    <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>"
    <br>

    <p>Select an existion Artist or a new one</p>

    <h3>Existing Artist</h3>

    <% @artists.each do |artist|%>
     <label for="<%= artist.id%>"> <%= artist.name%> </label>
        <input type="radio" name="song[artist_id]" id="<%= artist.id%>" <%='checked' if @song.artist.id == artist.id %>  value="<%= artist.id %>">
        </input>
    <% end %>

    <h3> New Artist </h3>
 <label for="artist_name">Artist Name</label>
    <br>
        <input type="text" name="artist_name" id="artist_name">
    </br>

    
    <h3>Existing Genre </h3>

<% @genres.each do |genre|%>
 <label for="<%= genre.id%>"><%= genre.name%> </label>
        <input type="checkbox" name="song[genre_ids][]" id="<%= genre.id%>" <%='checked' if @song.genres.include?(genre) %> value="<%= genre.id%>">
  
    
        </input>
<% end %>
 
 <h3> New Genre </h3>
 <label for="genre_name">Genre:</label>

  <input type="text" name="genre_name" id="genre_name"></input>



    <input type="submit" id="Save" value="Edit Song"> 
</form>

