<h1><%=@song.name%></h1>

<form action="/songs/<%=@song.slug%>" method='post'>
<input type="hidden" name="_method" value="patch">
<div>
  <label for='Name'>Song name:</label>
  <input type='text' name="Name" value='<%=@song.name%>'>
</div>

<div>
  <label for='Artist Name'>Artist name:</label>
  <input type='text' name='Artist Name' value='<%=@song.artist.name%>'>
</div>
<hr>

<% Genre.all.each do |genre| %>
  <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.name%>" <%='checked' if @song.genres.include?(genre) %> >
  <%= genre.name %>
<% end %>
<hr>

<input type='submit' value="Save">
</form>
