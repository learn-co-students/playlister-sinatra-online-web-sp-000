<h1>Update an existing song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>

  <br>

  <input type="text" name="Name" value="<%=@song.name%>">

  <br>

  <label>Choose an existing genre:</label>

   <br>

   <% Genre.all.each do |genre| %>
     <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.name %>" <%='checked' if genre.songs.include?(@song) %>><%=genre.name%></input>
   <% end %>

   <br>

   <label>Artist:</label>
   <br>
   <input type="text" name="Artist Name" value="<%=@artist.name%>"></input>
   <br>

  <input type="submit" value="Save">
</form>
