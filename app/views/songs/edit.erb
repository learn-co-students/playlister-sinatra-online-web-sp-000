<form method="post" action="/songs/<%= @song.slug %>">
  Name: <input type="text" name="name" id="Name" value="<%= @song.name %>">
  Artist: <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>">
  Genre:
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>
  Or create a new genre: <input type="text" name="genre_name">
  <input type="submit" id="submit" value="Save">
</form>