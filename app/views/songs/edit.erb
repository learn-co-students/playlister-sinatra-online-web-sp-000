<h1>Edit Song Below:</h1>

<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label for="name">Name </label>
  <input type="text" name="name" id="name" value="<%= @song.name %>">
  <br><br>
  <label for="artist">Artist Name </label>
  <input type="text" name="artist" id="artist"value="<%= @song.artist.name %>">
  <br><br>
  <label>Genres:</label>
  <br>
  <% @genres.each do |genre| %>
    <input type="checkbox" name="genre[]" id="<%= genre.name %>" value="<%= genre.id %>"<%='checked' if @song.genres.include?(genre) %> ><%= genre.name %></input><br>
  <% end %>
  <br>

  <input type="submit" value="Save">
</form>