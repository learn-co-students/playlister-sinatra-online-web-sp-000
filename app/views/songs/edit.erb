<h2>Edit a Song</h2>

<p>
    <form method="post" action="/songs/<%= @song.slug %>">
        <input type="hidden" id="hidden" name="_method" value="patch">
        <label for="song_name">Name</label>
        <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>"></input>
        <br><br>
        
        <p>Genres:</p>
        <% @genres.each do |genre| %>
        <input type="checkbox" name="song[genre_ids][]" id="<%= genre.name %>" value="<%= genre.id %>" <%= "checked" if @song.genres.include?(genre) %>><%= genre.name %></input>
        <% end %>
        <br><br><br>

        <label for="artist_name">Artist Name</label>
        <input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>"></input>
        <br><br>

        <input type="submit" value="Save"></input>
    </form>
</p>