	<input id="Artist Name" type="text" name="artist[name]" value="<%= @song.artist.name %>">	
    <br><br>
    
    <h2>Genre Info</h2>
	<h3>Select from Existing Genres</h3>
	<% @genres.each do |obj| %>
        <input id="<%= obj.name %>"
            type="checkbox" 
			name="genres[]" 
			value="<%= obj.id %>"
			<%='checked' if @song.genres.include?(obj) %>>
                <%= obj.name %>
        </input>
	<% end %>
	
	<h3>Add New Genre</h3>
	<input id="Genre Name" type="text" name="genre[name]" placeholder="Genre Name">
    
	<p><input type="submit" value="Save"></p>
</form>