<h1>Edit Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
<input type="hidden" id="hidden" name="_method" value="PATCH">

<label for="name">Name</label>
<input type="text" id="name" name="song[name]" value="<%= @song.name %>">
<br>
<h3>Genres:</h3>
<% Genre.all.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="genres[]" value="<%= genre.id%>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name%><br>
<%end%>
<br>
<h3>Artist:</h3>
<label for="artist_name">Artist Name</label>
<input type="text" name = "artist[name]" id="artist_name" value="<%= @song.artist.name %>">
<br>
<input type="submit" value="Save">
</form>