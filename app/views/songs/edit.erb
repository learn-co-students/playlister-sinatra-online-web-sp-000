<form action='/songs/<%=@song.slug%>' method='POST'>
<input id='hidden' type='hidden' name='_method' value='patch'>
<input id='Artist Name' type='text' name='song[artist_name]' value='<%=@song.artist.name%>'>
<%@genres.each do |genre|%>
<p><input type='checkbox' name='song[genres][]' id='<%=genre.name%>' value='<%=genre.id%>' <%='checked' if @song.genres.include?(genre)%>><%=genre.name%></p>
<%end%>
<input id='Save' type='submit' value='Save' name='submit'>
</form>