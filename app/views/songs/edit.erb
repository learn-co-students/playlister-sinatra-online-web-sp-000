<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="POST">
   <input id="hidden" type="hidden" name="_method" value="patch">
   <label>Edit Song:</label>
      <input type="text" name="song[name]" value="<%= @song.name %>">
   <br>
   <br>
   <label>Edit Artist:</label>
      <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="Artist Name">

   <h3>Edit Genres</h3>
   <% Genre.all.each do |genre| %>
      <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"<%='checked' if @song.genres.include?(genre) %>><%= genre.name %>
   <% end %>
   <br>
   <br>
   <input type="submit" value="Save">
</form>

<br>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>