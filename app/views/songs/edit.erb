<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method='post'>
<input type='hidden' name='_method' value="PATCH">
<label>Name:</label>
<input type='text' name='name' id="name" value="<%= @song.name %>">

<br> <br>
<label>Genre:</label> <br>
<% Genre.all.each do |genre|%>
<input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %></input> <br>
<% end %>
<br>
<label>Artist:</label>
<input type="text" name="Artist Name" value="<%= @song.artist.name %>">

<input type="submit" value="Save">
</form>