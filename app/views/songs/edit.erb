<h1>Update Song</h1>

<h2><%=@song.name%></h2>

<form action="/songs/<%=@song.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input type="text" id="Name" name="song"></p>
  <p>Artist Name: <input type="text" id="Artist Name" name="artist"></p>
  <p>Genres:</p>
  <%Genre.all.each do |genre|%>

  <p><input type="checkbox" id="<%=genre.name%>" name="genres[]" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre)%> >
    <%=genre.name%></p>
  <%end%>
  <br><br>
  <input type="submit" value="Save">
</form> 