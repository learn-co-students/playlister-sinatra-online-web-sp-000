<h2><%=@song.name%></h2>

<form action="/songs/<%=@song.slug%>/edit" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  Genre:
  <%@genres.each do |genre|%>
    <br><input type="checkbox" id="<%=genre.name%>" name="genre_name" value="<%=genre.name%>" <%= 'checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
  <%end%>
  
  <br>Artist:
  <br><input type="text" id="Artist Name" name="artist_name">
  <br><input id="submit" type="submit" value="Save">
</form>