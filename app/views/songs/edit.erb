<h1>Edit <%= @song.name %></h1>

<form action='/songs/<%=@song.slug%>' method="POST">
	<input id="hidden" type="hidden" name="_method" value="PATCH">

		
	<label for="name"><h3>Song Name: <%= @song.name %></h3></label>
	<input type="text" name="song[name]" id="Song Name" value="<%= @song.name %>"><br><br>

		
		<label for="Artist Name"><h3>Artist Name: <%= @song.artist.name %> </h3></label>
		<input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name%>"><br><br>

		<% @genres.each do |genre| %>
			<input type='checkbox' name='genres[]' value='<%=genre.id%>' id='<%=genre.name%>' <%='checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
		<%end%>
		
		<br>
		<br>

		<input type="submit" value="Save">
</form>