<h1>Edit Song</h1>
<form method="POST" action="/songs/<%= @song.slug %>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Artist Name: </label>
  <input type="text" name="artist_name" id="Artist Name">
  <br>
  
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genre_ids[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %> id="<%= genre.name %>"><%= genre.name %></input>
  <% end %>
  <br>
  <input type="submit" value="Save">
</form>