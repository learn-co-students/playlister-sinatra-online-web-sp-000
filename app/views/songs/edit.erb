<h2><%=@song.name%></h2>

<form action="/songs/<%=@song.slug%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  Genre:
  <%@song.genres.each do |genre|%>
    <br><input type="checkbox" id="<%=genre.name%>" name="genre_name" value="<%=genre.name%>"><%=genre.name%></input>
  <%end%>
  
  <br>Artist:
  <br><input type="text" id="Artist Name" name="artist_name">
  <br><input id="submit" type="submit" value="Save">
</form>