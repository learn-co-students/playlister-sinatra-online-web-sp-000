<h1>Edit <%= @song.name %></h1>
<form method="post" action="/songs/<%= @song.slug %>">
<input id="hidden" type="hidden" name="_method" value="patch">
    <label for="artist_name">Artist Name</label>
    <input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>"></input><br>

    <label for="name">Name</label>
    <input type="text" name="song[name]" id="name" value="<%= @song.name %>"></input> <br>

    <label for="genres">Genres</label><br>
    <% Genre.all.each do |genre| %>
        <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>></input><br>
    <% end %>

    <input type="submit" value="Save">
</form>
