<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="POST">
    <input id="hidden" type="hidden" method="_method" value="PATCH">

    <label for="name">Name</label>
    <input type="text" name="song[name]" id="name" value="<%= @song.name %>">

    <% Genre.all.each do |genre| %>
        <label><%= genre.name %></label>
        <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %>
    <% end %>
        <br>
        <br>
    <label for="artist_name">Enter the New Artist Name</label>
    <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="artist_name">
    <br>

    <input type="submit" value="Save">
</form>





