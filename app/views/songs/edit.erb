<h1>Add Song</h1>
<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="Name">Song Name: </label>
  <input type="text" name="song[name]" id="Name" value="<%= @song.name %>">

  <label for="Artist Name">Artist Name: </label>
  <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>">

  <label>Genres</label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" <%= "checked" if @song.genres.include?(genre) %> type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>"><%= genre.name %> </input><br>
  <% end %>

  <input type="submit" value="Save">
</form>
