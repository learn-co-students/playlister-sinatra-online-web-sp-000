<form action="/songs/<%=@song.slug%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label for="name">Song Name:</label>
  <input type="text" id="Name" name="name" value="<%=@song.name%>">
  <br>
  <label>Edit Artist:</label>
  <br>
  <input type="textbox" id="Artist Name" name="artist_name" value="<%=@artist.name%>"><br>


<label>Select Genre:</label>
  <br>
  <% Genre.all.each do |genre| %>
  <input id="<%= genre.name %>" type="checkbox" name="genre[]" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%><br>
  <% end %>

  <input type="submit" id="Save" value="Update Song">
</form>
