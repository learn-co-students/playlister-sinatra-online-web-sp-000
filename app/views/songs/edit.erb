<h1>Edit Song</h1>

<form method="post" action="/songs/<%= @song.slug %>">
    <input type="hidden" name="_method" value="patch">

	<h2>Song Info</h2>
	<input id="Name" type="text" name="song[name]" value="<%= @song.name %>">
    <br><br>

    <h2>Artist Info</h2>
		
