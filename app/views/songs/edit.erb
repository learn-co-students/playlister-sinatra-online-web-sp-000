<form action="/songs/<%=@song.slug%>" method="POST">
<input type="hidden" name="_method" value="PATCH">
<label for="artist_name">Artist Name</label><br>
<input tpye="text" name="artist[name]" id="artist_name" value="<%=@song.artist.name%>"><br>
<label for="name">Name</label>
<br>
<input type="text" name="song[name]" id="name" value="<%=@song.name%>"><br>

<label>Pick the Genre:</label><br>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %><br>
  <% end %>
  <button type="submit" id="Create">Save</button>
</form>