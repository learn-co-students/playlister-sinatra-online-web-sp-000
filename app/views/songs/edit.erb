<h1>Edit <%= @song.name %></h1>

<form action="/songs/<%= @song.slug %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <h3>Song Name: <input type="text" name="song_name" id="Song Name" value="<%=@song.name%>"></h3>
    <h3>Artist Name: <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>"></h3>
    <% Genre.all.each do |genre| %>
        <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>>
        <label for="genre"><%= genre.name %><br>
    <% end %>

    <br>

    <input type="submit" value="Save">
</form>