<form action="/songs/<%= @song.slug %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    
    <input type="text" name="Name" value="<%= @song.name %>"><br>

    <input type="text" name="Artist Name" value="<%= @song.artist.name %>"><br>

    <% Genre.all.each do |genre| %>
      
        <p><input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></p>

    <% end %>

    <input type="submit" value="Save">



</form>