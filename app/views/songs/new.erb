
<h1>Enter Your Song Below</h1>

<form action="/songs" method="POST">
  <label>Song's Name:</label>
  <br>
  <input type="text" id="Name" name="Name" placeholder="Song's name..">
  <br><br>
  <label for="genres">Genres</label><br>

  <% @genres.each do |genre| %>
    <input type="checkbox" name="song[genre_name][]" id="<%= genre.name %>" value="<%= genre.name%>"><%= genre.name %></input><br>
  <% end %>
  <br>
  <h3>New Artist</h3>
  <label>Artist's Name: </label>
  <br>
    <input type="text" name="Artist Name" id="Artist Name" placeholder="Artist's name.."></input>
  <br><br>
  <input type="submit" value="Create">
  <br><br>
</form>



