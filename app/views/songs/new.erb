<form method="post" action="/songs">
  
  <label for="song_name">Name</label>
  <input type="text" name="song[name]" id="song_name">
  
  <br>
  <label for="artist_name">Artist Name</label>
  <input type="text" name="song[artist][name]" id="artist_name">

  <br>
  <label>Select a Genre</label><br>
   <% Genre.all.each do |genre| %>
  <input type="checkbox" name="[genres][]" value="<%= genre.name %>" id="<%= genre.name %>"><%= genre.name %><br>
  <% end %>
  
  <input type="submit" value="Create">
</form>
