<h1>Create a New Song</h1>

<form action="/songs" method="POST">
  <label for="song_name">Name</label>
  <br>
  <input type="text" id="song_name" name="song[name]" value="Name">

  <br>
  <p>Select an existing Genre</p>


  <h3>Genres</h3>
  <% @genres.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]" id="<%= genre.id %>" value="<%= genre.id %>"><%= genre.name %></input><br>
  <% end %>
  <br>

  <h3>Artist</h3>
  <label for="artist_name">Artist Name</label>
  <br>
  <input type="text" name="artist[name]" id="artist_name"></input>
  <br><br>

  <input type="submit" value="Create Song">
</form>
