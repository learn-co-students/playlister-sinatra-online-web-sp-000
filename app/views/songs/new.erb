<h1>Create a New Song</h1>

<form action="/songs" method="POST">
<label>Song Name:</label>
<input type="text" name="song[name]" id="Name">
<br>

<label> Song Artist:</label>
<input type="text" name="artist[name]" id="Artist Name">
<br>
<label> Select Song Genre(s):</label>
<% @genres.each do |genre| %>
<input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"> <br>
<%end%>

<input type="submit" value="Create New Song" id="Create">
</form>
