<h1>Create A New Song Below</h1>
<p>
<form action="/songs/new" method="POST">
<label for="Name">Name</label>
<input type="text" name="song[name]" id="Name"><br>
<label for="Artist Name">Artist Name</label>
<input type="text" name="song[artist][name]" id="Artist Name"></p>
<h1>Genres</h1><br>
<ul>
<% @genres.each do |genre| %>
    <li><label for="<%= genre.name %>"><%= genre.name %></label>
    <input type="checkbox" name="song[genre][][name]" value="<%= genre.name %>" id="<%= genre.name %>"></li>
<% end %>
</ul>
<input type="submit" id="Create" value="Create">
</form> 