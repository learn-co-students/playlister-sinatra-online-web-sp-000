<h1>Create Your Song!</h1>

<form action="/songs" method="post">

  <label>Song Name:</label>
  <input type="text" name="song[name]" id="song_name">

  <h3>Existing Genres</h3>
  <% @genres.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]" id="<%= genre.id %>" value="<%= genre.id %>"><%= genre.name %></input><br>
  <% end %>
  <br>

  <h3>Create an artist for your song</h3>
  <lable>Artist Name:</label>
  <br>
  <input type="text" name="artist[name]" id="artist_name">
  <br><br>

  <input type="submit" value="Create Song">
</form>


