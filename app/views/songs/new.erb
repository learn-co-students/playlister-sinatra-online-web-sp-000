<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label>Song Name:</label>

  <br>

  <input type="text" name="song[name]" id="Name">

  <h3>Genres</h3>
  <% @genres.each do |genre| %>
    <input type="checkbox" name="genre[ids][]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %><br>
  <% end %>
  <br>

  <h3>Existing Artists</h3>
  <% @artists.each do |artist| %>
    <input type="radio" name="song[artist_id]" id="<%= artist.name %>" value="<%= artist.id %>"><%= artist.name %><br>
  <% end %>
  <br>

  <h3>New Artist</h3>
  <label>Artist Name: </label>
  <br>
  <input type="text" name="artist[name]" id="Artist Name"></input>
  <br><br>


  <input type="submit" value="Create Artist">
</form>
