<h1>New Song</h1>

<form action="/songs" method="POST">
  <label>Name:</label>

  <br>
  <input type="text" name="Name" id="song_name">
  <br>

  <label>Choose a genre:</label>
  <br>
  <%@genres.each do |genre|%>
    <input type="checkbox" name="genre_ids[]" id="<%=genre.name%>" value="<%=genre.id%>"><%=genre.name%></input>
  <%end%>

  <br>

    <label>Enter Artist:</label>
    <br>
      <input  type="text" name="Artist Name"></input>
    <br>
  <input type="submit" value="Create Song" id="Create Song">
</form>
