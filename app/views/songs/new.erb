<h2>Create a Song</h2>

<p>
    <form method="post" action="/songs">
        <label for="song_name">Name</label>
        <input type="text" name="song[name]" id="song_name"></input>
        <br><br>
        
        <p>Genres:</p>
        <% @genres.each do |genre| %>
        <input type="checkbox" name="song[genre_ids][]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input>
        <% end %>
        <br><br><br>

        <label for="artist_name">Artist Name</label>
        <input type="text" name="artist[name]" id="artist_name"></input>
        <br><br>

        <input type="submit" value="Create"></input>
    </form>
</p>