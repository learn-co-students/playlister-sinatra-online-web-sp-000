<h2>New Song</h2>
<form action="/songs" method="post">
    <label for "Name">Song Name: </label>
    <input type="text" name="song[name]" id="Name"><br/>

    <label for "Artist Name">Artist: </label>
    <input type="text" name="song[artist]" id="Artist Name"><br/>

    <label for "Genres">Genres: </label><br/>
    <% @genres.each do |genre| %>
        <input id="<%= genre.name %>" type="checkbox" name="song[genres][]" value="<%= genre.id %>"><%= genre.name %><br>
    <% end %>
    <br/>
    <input type="submit" id="Create">
</form>

