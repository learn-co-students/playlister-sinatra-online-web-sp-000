<h2>Add a song</h2>

<form action="/songs" method="POST">
  <label for="Name">Name:</label>
  <input type="text" id="Name" name="song[name]" /></br>

  <p>Select a Genre:</p>
  <% @genres.each do |genre| %>
  <input type="checkbox" name="song[genre_ids][]" id="<%= genre.name %>" value="<%= genre.id %>" /> <%= genre.name %></br>
  <% end %>

  </br>
  <label for="Artist Name">Artist:</label>
  <input type="text" id="Artist Name" name="song[artist][name]" /></br></br>

  <button type="submit" id="Create">Create</button>
</form>
