<% if @songs %>
  <h1>Songs</h1>
  <ol>
    <% @songs.each do |song|  %>
    <li>Title: <a href="/songs/<%= song.slug%>"><%= song.name %></a>
    <br>Artist: <a href="/artists/<%=song.artist.slug%>"><%=song.artist.name%></br>
    </li>
    <br>
      <% end %>
  </ol>
<% else %>
  <h2>You have no songs yet.</h2>
<% end %>
