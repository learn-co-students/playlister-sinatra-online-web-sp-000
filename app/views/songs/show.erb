<!DOCTYPE html>
<html lang="en">
<head>
	<title>Document</title>
</head>
<body>

	<% if flash.has?(:message) %>
	  <%= flash[:message] %>
	<% end %>

	<h1><%= @song.name %></h1>

	<div>
		<h3>Artist:</h3>
		<div>
			<a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>
		</div>
	</div>

	<div>
		<h3>Genres:</h3>
		<ul>
			<% @song.genres.each do |genre| %>
				<li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
			<% end %>
		</ul>
	</div>
</body>
</html>