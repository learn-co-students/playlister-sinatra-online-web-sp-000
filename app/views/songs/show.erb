<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>
<h2>Artist</h2>
<p><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></p>
<h2>Genres</h2>
<p><%= @song.genres.collect{|genre|"<a href='/genres/#{genre.slug}'>#{genre.name}</a>"}.join(", ") %></p>
