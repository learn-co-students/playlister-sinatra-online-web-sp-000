<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%=@song.name%></h1>
<h3>Artist: <%=@song.artist.name%></h3>
<a href="/artists/<%=@song.artist.slug%>">Show Artist</a>

<h3>Genres:</h3>
<ul>
<%@song.genres.each do |genre|%>
<li><%=genre.name%></li>
<a href="/genres/<%=genre.slug%>">Show Genre</a>
<%end%>
</ul>

