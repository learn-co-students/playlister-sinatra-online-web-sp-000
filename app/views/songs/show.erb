

<h1><%=@song.name%></h1>

<h2>Artist</h2>
<a href="/artists/<%=@song.artist.slug%>"><%= @song.artist.name %></a>
<br>
<h2>Genres</h2>
<% @song.genre_ids.each do |i|%>
<p><a href="/genres/<%= Genre.find(i).slug %>"><%= Genre.find(i).name %></a></p>
<% end %>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
