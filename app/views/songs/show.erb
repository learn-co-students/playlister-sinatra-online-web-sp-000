<h1>Song: <%= @song.name %></h1>
<br>
<h3>Artist:</h3>
<ul>
  <li><a href="/artists/<%= @song.artist.id %>"><%= @song.artist.name %></a></li>
</ul>
<br>
<h3>Genre(s):</h3>
<ul>
  <% @song.genres.each do |genre| %>
    <li><a href="/genres/<%= genre.id %>"><%= genre.name %></a></li>
  <% end %>
</ul>
<br>

<a href="/songs/<%= @song.id %>/edit"><input type="submit" value="Edit Song"></a>