
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h3>Song Name:</h3><h4> <%= @song.name %> </h4>
<br><br>

<h3>Song's Artist Name: </h3>
<a href="/artists/<%= @song.artist.slug %>">
  <%= @song.artist.name %>
</a>
<br><br><br>

<h3>Song's Genres:</h3>
<ul>
  <% @song.genres.each do |genre| %>
    <li>
      <a href="/genres/<%= genre.slug %>">
        <%= genre.name %>
      </a>
    </li>
  <% end %>
</ul>
