<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h2><%= @song.name %></h2>
<p>(
  <% @song.genres.each do |genre| %>
    <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
    <%= "," unless genre.name == @song.genres.last.name %>
  <% end %>
)</p>
<h3>By: <a href="/artists/<%= @artist.slug %>"><%= @artist.name %></a></h3>