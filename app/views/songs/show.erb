<!DOCTYPE html>
<html>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
    <body>
        <h1>Song: <%= @song.name %></h1>
        <h4>Artist:
        <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></li>
        </h4>

        <h4>Genres:</h4>
        <ul>
        <% @song.genres.each do |genre| %>
            <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
        <% end %>
        </ul>




    </body>

</html>