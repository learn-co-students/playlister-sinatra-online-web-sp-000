
<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>

<h1 id="song_name"><%= @song.name %></h1> 
<br>
Artist: <br>
<a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a>
<br>
Genres: <br>
<% @song.genres.each do | genre | %>
    <a href="/genres/<%= genre.slug %>"><%= genre.name %></a><br>
<% end %>