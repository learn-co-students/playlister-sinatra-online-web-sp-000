<h2><%= @song.name %></h2>
<p>Artist: 
<% if artist = @song.artist %>
<a href="/artists/<%= artist.slug %>"><%= artist.name %></a>
<% else %>
<%= "none" %>
<% end %>
</p>
<p>Genres: </p>
<ol>
  <% @song.genres.each do |genre| %>
  <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
</li>
<% end %>
</ol>