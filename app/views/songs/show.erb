<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2>Song: <%=@song.name%></h2>

<h3>Genres:</h3>
  <%@song.genres.each do |genre|%>
  <h4><a href="/genres/<%= genre.slug %>"><%= genre.name%></a></h4>
<% end %>

<h3>Artist:</h3>
<h4><a href=<%="/artists/#{@song.artist.slug}"%>> <%= @song.artist.name%></a></h4>
