<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h1><%=@song.name%></h1>
<h4>Artist:</h4>
    <p><a href ="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></p>
<h4>Genres:</h4>
<ul>
  <% @song.genres.each do |genre| %>
    <li><a href ="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
  <% end %>
</ul>