<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%=@song.name%></h1>

<p><strong>Artist:</strong> <a href="/artists/<%= @song.artist.slug %>"> <%= @song.artist.name %> </a></p>

<p><strong>Genre:</strong>  <% @song.genres.each do |genre| %>
  <a href="/genres/<%= genre.slug %>"><%= genre.name %> </a>
<% end %></p>