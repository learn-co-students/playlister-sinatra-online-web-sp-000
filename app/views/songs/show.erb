<h1> Songs Show Page </h1>

<% if flash.has?(:notice) %>
  <%= flash[:notice] %>
<% end %>


<h2>Song</h2>
<%= @song.name%>
<h3> Artist </h3>
<a href="/artists/<%=@song.artist.slug%>"><%= @song.artist.name%></a>
<h3>Genres</h3>
<ul>
<li><% @song.genres.each do |g| %><a href="/genres/<%=g.slug%>"> <%= g.name %> </a></li>
<% end %>
</ul>

<a href = "/songs/<%= @song.slug%>/edit"> Edit this Song</a>


