<!DOCTYPE html>
<html>
  <head>
    <title>Playlister</title>
  </head>

  <body>
  <% if flash.has?(:message) %>
    <%= flash[:message] %>
  <% end %>
  <h1><%= @song.name %></h1><br><br><br><br>
    <h2>Artist:</h2>
    <p><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></p><br><br>
    <h2>Genres:</h2>
    <% @song.genres.each do |genre| %>
      <p><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></p>
    <% end %>
  </body>
</html>