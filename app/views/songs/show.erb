<html>
  <% if flash.has?(:message) %>
    <%= flash[:message] %>
  <% end %>
  <body>
    <h1>Song Info</h1>
    <br>
    <h2><%= @song.name %></h2>
    <br>
    <p><a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></p>
    <p>Genres</p>
    <% @song.genres.each do |genre| %>
      <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
    <% end %>
  </body>
</html>