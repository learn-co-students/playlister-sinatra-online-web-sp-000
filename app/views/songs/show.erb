<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h1><%= @song.name %></h1><br>

<% if @song.artist %>
    <h3>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h3>
<% else %>
    No artist available
<% end %>

<% if @song.genres %>
    <h3>Genres: 
    <% @song.genres.each do |genre| %>
        <a href="/genres/<%= genre.slug %>"><%= genre.name %></a></h3>
    <% end %>
<% else %>
    No genre available
<% end %>