<form method="post" action="/songs/<%= @song.slug %>">
<input id="hidden" type="hidden" name="_method" value="patch">
    <label name="Name">Name</label>
    <input type="text" name="Name" id="Name" value="<%= @song.name %>">

    <label name="Artist Name">Artist Name</label>
    <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>">

    <% Genre.all.each do |genre| %>
        
        <input type="checkbox" name="genre[id]" id="<%= genre.name %>" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %><br>
    <% end %>

    <input type="submit" value="Save">
</form>